---
import Layout from "../layouts/Layout.astro";
import Hero from "@components/home/Hero.astro";
import Intro from "@components/home/Intro.astro";
import Features from "@components/home/Features.astro";
import TrustElements from "@components/home/TrustElements.astro";
import CallToAction from "@components/home/CallToAction.astro";
import ContactUs from "@components/home/ContactUs.astro";
import Testimonials from "@components/home/Testimonials.astro";
import Footer from "@components/Footer.astro";
---

<Layout>
  <main class="min-h-screen">
    <Hero />
    <div
      class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16 lg:py-24 space-y-16 md:space-y-24"
    >
      <Intro />
      <Features />
    </div>
    <TrustElements />
    <CallToAction />
    <div id="contact">
      <ContactUs />
    </div>
    <!-- <Testimonials /> -->
  </main>
  <Footer />
</Layout>
