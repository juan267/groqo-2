---
import Layout from "../layouts/Layout.astro";
import Footer from "@components/Footer.astro";
import Intro from "@components/products/Intro.astro";
import Products from "@components/products/Products.astro";
---

<Layout
  title="Groqo | Cannabis Flowers"
  description="Groqo delivers EU-GMP compliant, pharmaceutical-grade cannabis flowers including CBD, CBG, and THC varieties with premium genetics and proprietary drying technology for business partners worldwide."
>
  <main class="min-h-screen">
    <div
      class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16 lg:py-24 space-y-16 md:space-y-24"
    >
      <Intro />
      <Products />
    </div>
  </main>
  <Footer />
</Layout>
