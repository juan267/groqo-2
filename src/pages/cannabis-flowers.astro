---
import Layout from "../layouts/Layout.astro";
import Footer from "@components/Footer.astro";
import Intro from "@components/products/Intro.astro";
import Products from "@components/products/Products.astro";
---

<Layout
  title="Groqo - Sustainable Cannabis Solutions"
  description="Groqo provides innovative and sustainable solutions for cannabis cultivation, processing, and post-harvest management."
>
  <main class="min-h-screen">
    <div
      class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16 lg:py-24 space-y-16 md:space-y-24"
    >
      <Intro />
      <Products />
    </div>
  </main>
  <Footer />
</Layout>
