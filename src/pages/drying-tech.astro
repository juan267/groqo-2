---
import Layout from "../layouts/Layout.astro";
import Hero from "@components/dryingTech/Hero.astro";
import Intro from "@components/dryingTech/Intro.astro";
import Footer from "@components/Footer.astro";
import KeyBenefits from "@components/dryingTech/KeyBenefits.astro";
import Timeline from "@components/dryingTech/Timeline.astro";
import WhyItMatters from "@components/dryingTech/WhyItMatters.astro";
---

<Layout
  title="Groqo - Sustainable Cannabis Solutions"
  description="Groqo provides innovative and sustainable solutions for cannabis cultivation, processing, and post-harvest management."
>
  <main>
    <Hero />
    <div
      class="mt-16 mb-32 sm:mt-28 container mx-auto px-4 sm:px-6 lg:px-16 space-y-24"
    >
      <Intro />
      <KeyBenefits />
      <Timeline />
      <WhyItMatters />
    </div>
  </main>
  <Footer />
</Layout>
