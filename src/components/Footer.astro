---
import { Image } from "astro:assets";
import logo from "@images/logo.png";
---

<footer class="py-16 border-t border-gray-200 bg-gray-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 sm:gap-12">
      <!-- Logo and Company Info -->
      <div class="space-y-4">
        <div class="flex items-center">
          <Image
            src={logo}
            alt="Groqo Logo"
            class="h-10 w-auto"
            width={120}
            height={40}
          />
        </div>
        <p class="text-gray-600 leading-relaxed">
          Premium dried cannabis flowers from our pharmaceutical-grade
          post-harvest facility.
        </p>
        <div class="pt-2">
          <p class="text-sm text-gray-500">
            EU-GMP Certification (In progress)
          </p>
        </div>
      </div>

      <!-- Contact Info -->
      <div class="space-y-4">
        <h3 class="text-gray-900 font-medium text-lg">Contact</h3>
        <div class="space-y-3">
          <p class="text-gray-600">Viterbo, Caldas, Colombia</p>
          <a
            href="mailto:sales@groqo.com"
            class="text-gray-900 font-medium block hover:text-green-700 transition-colors"
          >
            sales@groqo.com
          </a>
          <a
            href="tel:+573153328289"
            class="text-gray-600 block hover:text-green-700 transition-colors"
          >
            (+57) 315 332 8289
          </a>
          <a
            href="tel:+573168771861"
            class="text-gray-600 block hover:text-green-700 transition-colors"
          >
            (+57) 316 877 1861
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <h3 class="text-gray-900 font-medium text-lg">Quick Links</h3>
        <div class="flex flex-col space-y-2">
          <a
            href="/"
            class="text-gray-600 hover:text-green-700 transition-colors">Home</a
          >
          <a
            href="/cannabis-flowers"
            class="text-gray-600 hover:text-green-700 transition-colors"
            >Products</a
          >
          <a
            href="/drying-tech"
            class="text-gray-600 hover:text-green-700 transition-colors"
            >Post-Harvest</a
          >
          <a
            href="/about-us"
            class="text-gray-600 hover:text-green-700 transition-colors"
            >About Us</a
          >
          <a
            href="/terms-of-service"
            class="text-gray-600 hover:text-green-700 transition-colors"
            >Terms of Service</a
          >
        </div>
      </div>

      <!-- Legal and Social -->
      <div class="space-y-4">
        <h3 class="text-gray-900 font-medium text-lg">Connect</h3>
        <div class="flex items-center space-x-3">
          <a
            href="https://www.linkedin.com/company/groqo/"
            class="text-gray-600 hover:text-gray-900 transition-colors"
            aria-label="LinkedIn"
            target="_blank"
            rel="noopener"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
              ></path>
            </svg>
          </a>
        </div>
        <div class="pt-6">
          <p class="text-gray-800 mb-1">Â© 2024 Groqo SAS</p>
          <p class="text-gray-600 text-sm">All Rights Reserved.</p>
        </div>
      </div>
    </div>
  </div>
</footer>
