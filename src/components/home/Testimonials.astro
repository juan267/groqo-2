---
import { Image } from "astro:assets";
import julianImage from "@images/julian.png";
---

<section
  class="my-16 sm:my-24 py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-gray-50 to-white"
>
  <div class="container mx-auto">
    <div class="relative max-w-5xl mx-auto">
      <div
        class="rounded-2xl shadow-lg p-8 md:p-12 bg-white border border-gray-100 relative"
      >
        <!-- Section Title -->
        <div class="mb-12 text-center">
          <div class="inline-block mb-4">
            <span
              class="px-4 py-1 rounded-full bg-primary-green bg-opacity-10 text-white text-sm font-medium"
            >
              Partner Testimonials
            </span>
          </div>
          <h2
            class="text-3xl md:text-4xl font-bold text-gray-900 tracking-tight"
          >
            What our partners say about our company
          </h2>
        </div>

        <!-- Testimonial -->
        <div class="flex flex-col md:flex-row items-center gap-10 md:gap-16">
          <!-- Profile Image -->
          <div class="w-40 h-40 md:w-56 md:h-56 flex-shrink-0 relative">
            <div
              class="absolute inset-0 rounded-full bg-primary-green opacity-5 transform -rotate-6"
            >
            </div>
            <div
              class="absolute inset-0 rounded-full bg-primary-green opacity-5 transform rotate-3"
            >
            </div>
            <div class="relative">
              <Image
                src={julianImage}
                alt="Julian Vaterrodt"
                class="w-full h-full rounded-full object-cover border-4 border-white shadow-md"
              />
            </div>
          </div>

          <!-- Testimonial Content -->
          <div class="space-y-5">
            <div class="flex items-center mb-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-primary-green mr-2"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"
                ></path>
              </svg>
              <h3 class="text-2xl font-bold text-gray-900">Julian Vaterrodt</h3>
            </div>
            <p class="text-gray-700 font-medium flex items-center">
              <span class="inline-block w-6 h-px bg-primary-green mr-2"></span>
              Managing director Integraleaf
            </p>

            <blockquote
              class="text-gray-700 italic text-lg leading-relaxed relative pl-4"
            >
              <span
                class="absolute left-0 top-0 text-4xl text-primary-green opacity-20"
                >"</span
              >
              Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
              tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim
              veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex
              ea commodo consequat.
              <span
                class="absolute -bottom-4 right-0 text-4xl text-primary-green opacity-20"
                >"</span
              >
            </blockquote>

            <div class="pt-4 mt-4 border-t border-gray-100">
              <a
                href="#"
                class="inline-flex items-center text-primary-green font-medium hover:text-primary-green-dark transition-colors"
              >
                <span>Read the complete interview</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 ml-1"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
                    clip-rule="evenodd"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
