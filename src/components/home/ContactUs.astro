<section
  class="px-4 sm:px-6 lg:px-8 py-20 lg:py-24 bg-gradient-to-br from-green-50 to-white"
>
  <div class="container mx-auto max-w-6xl">
    <div
      class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-16"
    >
      <!-- Left Column - Contact Information -->
      <div class="lg:w-2/5 space-y-8">
        <div class="inline-block mb-4">
          <span
            class="px-4 py-1 rounded-full bg-primary-green bg-opacity-10 text-white text-sm font-medium"
          >
            Get in Touch
          </span>
        </div>

        <h2
          class="text-3xl sm:text-4xl font-bold text-gray-900 leading-tight tracking-tight"
        >
          Ready to partner with us?
        </h2>

        <p class="text-gray-700 max-w-xl leading-relaxed text-lg">
          Email, call, or complete the form to get in touch. Whether you're
          exploring business opportunities or inquiring about our products,
          we're happy to connect.
        </p>

        <div class="space-y-6 pt-6">
          <div class="flex items-start">
            <div class="mr-4 mt-1">
              <div
                class="w-10 h-10 rounded-full bg-primary-green bg-opacity-10 flex items-center justify-center text-white"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 text-white"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-gray-900 font-medium mb-1">Email</h3>
              <a
                href="mailto:sales@groqo.com"
                class="text-gray-700 hover:text-primary-green transition-colors"
              >
                sales@groqo.com
              </a>
            </div>
          </div>

          <div class="flex items-start">
            <div class="mr-4 mt-1">
              <div
                class="w-10 h-10 rounded-full bg-primary-green bg-opacity-10 flex items-center justify-center"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 text-white"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-gray-900 font-medium mb-1">Phone</h3>
              <a
                href="tel:+573168771861"
                class="text-gray-700 hover:text-primary-green transition-colors block mb-1"
              >
                (+57) 316 877 1861
              </a>
              <a
                href="tel:+573153328289"
                class="text-gray-700 hover:text-primary-green transition-colors"
              >
                (+57) 315 332 8289
              </a>
            </div>
          </div>

          <div class="pt-6 mt-6 border-t border-gray-200">
            <p class="text-gray-700">
              <span class="font-medium text-gray-900">Business hours:</span> Monday
              – Friday, 9am – 5pm COT
            </p>
          </div>
        </div>
      </div>

      <!-- Right Column - Contact Form -->
      <div class="lg:w-3/5">
        <div
          class="relative bg-white p-8 lg:p-10 rounded-xl shadow-lg border border-gray-100"
        >
          <div
            class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-primary-green opacity-5 rounded-full blur-lg"
          >
          </div>

          <h3 class="text-2xl font-bold text-gray-900 mb-2">Get in touch</h3>
          <p class="text-gray-700 mb-8">
            Complete the form below and we'll respond promptly
          </p>

          <form
            id="contactForm"
            class="space-y-5"
            action="https://formsubmit.co/sales@groqo.com"
            method="POST"
          >
            <!-- Name Input -->
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-gray-700 mb-1 ml-1"
                >Your Name</label
              >
              <input
                id="name"
                name="name"
                type="text"
                placeholder="Name"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary-green focus:border-transparent transition-shadow"
                required
              />
            </div>

            <!-- Email Input -->
            <div>
              <label
                for="email"
                class="block text-sm font-medium text-gray-700 mb-1 ml-1"
                >Email Address</label
              >
              <div class="relative">
                <div
                  class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 text-gray-500"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <input
                  id="email"
                  name="email"
                  type="email"
                  placeholder="Your email"
                  class="w-full pl-12 pr-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary-green focus:border-transparent transition-shadow"
                  required
                />
              </div>
            </div>

            <!-- Phone Input -->
            <div>
              <label
                for="phone"
                class="block text-sm font-medium text-gray-700 mb-1 ml-1"
                >Phone Number (optional)</label
              >
              <div class="relative">
                <div
                  class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 text-gray-500"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                </div>
                <input
                  id="phone"
                  name="phone"
                  type="tel"
                  placeholder="Phone"
                  class="w-full pl-12 pr-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary-green focus:border-transparent transition-shadow"
                />
              </div>
            </div>

            <!-- Message Textarea -->
            <div>
              <label
                for="message"
                class="block text-sm font-medium text-gray-700 mb-1 ml-1"
                >Message</label
              >
              <textarea
                id="message"
                name="message"
                placeholder="Please let us know how we can help you"
                rows="5"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary-green focus:border-transparent transition-shadow"
                required></textarea>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full py-3 px-6 bg-primary-green hover:bg-primary-green-dark text-white font-medium rounded-lg shadow-sm hover:shadow transition duration-200 cursor-pointer flex items-center justify-center"
            >
              <span>Submit</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 ml-2"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path>
              </svg>
            </button>

            <!-- Terms Text -->
            <p class="text-center text-sm text-gray-600 mt-4">
              By contacting us, you agree to our
              <a href="#" class="text-primary-green font-medium hover:underline"
                >Terms of Service</a
              >
              and
              <a href="#" class="text-primary-green font-medium hover:underline"
                >Privacy Policy</a
              >
            </p>

            <!-- Hidden FormSubmit fields -->
            <input type="hidden" name="_next" value={Astro.url.href} />
            <input type="hidden" name="_captcha" value="false" />
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Success Modal -->
  <dialog id="success_modal" class="modal">
    <div class="modal-box">
      <h3 class="font-bold text-xl text-primary-green">Thank you!</h3>
      <div class="py-4 space-y-3">
        <div class="flex justify-center mb-2">
          <div class="rounded-full bg-green-100 p-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-primary-green"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
        </div>
        <p class="text-center text-gray-700">
          Your message has been successfully sent!
        </p>
        <p class="text-center text-gray-600">
          We'll get back to you as soon as possible.
        </p>
      </div>
      <div class="modal-action justify-center">
        <form method="dialog">
          <button
            class="btn btn-primary bg-primary-green hover:bg-primary-green-dark text-white border-none"
            >Close</button
          >
        </form>
      </div>
    </div>
    <form method="dialog" class="modal-backdrop">
      <button>close</button>
    </form>
  </dialog>
</section>

<script>
  // Get the form and modal elements
  const contactForm = document.getElementById("contactForm") as HTMLFormElement;
  const successModal = document.getElementById(
    "success_modal",
  ) as HTMLDialogElement;

  if (contactForm) {
    contactForm.addEventListener("submit", async function (e) {
      e.preventDefault();

      try {
        // Get form data
        const formData = new FormData(contactForm);

        // Submit the form using fetch
        fetch(contactForm.action, {
          method: "POST",
          body: formData,
          headers: {
            Accept: "application/json",
          },
        });

        // Reset the form
        contactForm.reset();

        // Show success modal
        successModal.showModal();
      } catch (error) {
        console.error("Error submitting form:", error);
      }
    });
  }
</script>
