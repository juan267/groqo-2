<section class="py-24 px-4 sm:px-6 lg:px-22 bg-green-50">
  <div
    class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-12"
  >
    <!-- Left Column - Contact Information -->
    <div class="lg:w-1/2 space-y-8">
      <h2 class="text-4xl font-bold text-gray-900">Contact us</h2>

      <p class="text-gray-700 max-w-md">
        Email, call, or complete the form to get in touch. Whether you're
        exploring business opportunities or inquiring about our products, we're
        happy to connect.
      </p>

      <div class="space-y-4 pt-4">
        <div>
          <a
            href="mailto:sales@groqo.com"
            class="text-gray-900 font-medium hover:text-green-700"
            >sales@groqo.com</a
          >
        </div>

        <div>
          <a
            href="tel:+573168771861"
            class="text-gray-900 font-medium hover:text-green-700"
            >(+57) 316 877 1861</a
          >
        </div>

        <div>
          <a
            href="tel:+573153328289"
            class="text-gray-900 font-medium hover:text-green-700"
            >(+57) 315 332 8289</a
          >
        </div>
      </div>
    </div>

    <!-- Right Column - Contact Form -->
    <div class="lg:w-1/2">
      <div class="bg-white p-8 rounded-lg shadow-sm">
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Get in touch</h3>
        <p class="text-gray-700 mb-6">You can reach us anytime</p>

        <form
          id="contactForm"
          class="space-y-4"
          action="https://formsubmit.co/j.gomez267@gmail.com"
          method="POST"
        >
          <!-- Name Input -->
          <div>
            <input
              name="name"
              type="text"
              placeholder="Name"
              class="w-full px-4 py-3 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"
              required
            />
          </div>

          <!-- Email Input -->
          <div>
            <div class="relative">
              <div
                class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 text-gray-500"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <input
                name="email"
                type="email"
                placeholder="Your email"
                class="w-full pl-12 pr-4 py-3 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"
                required
              />
            </div>
          </div>

          <!-- Phone Input -->
          <div>
            <div class="relative">
              <div
                class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 text-gray-500"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <input
                name="phone"
                type="tel"
                placeholder="Phone"
                class="w-full pl-12 pr-4 py-3 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"
              />
            </div>
          </div>

          <!-- Message Textarea -->
          <div>
            <textarea
              name="message"
              placeholder="Message"
              rows="5"
              class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"
              required></textarea>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full py-3 px-6 bg-green-600 hover:bg-green-700 text-white font-medium rounded-full transition duration-200"
          >
            Submit
          </button>

          <!-- Terms Text -->
          <p class="text-center text-sm text-gray-600 mt-4">
            By contacting us, you agree to our
            <a href="#" class="text-gray-800 font-medium hover:underline"
              >Terms of Service</a
            >
            and
            <a href="#" class="text-gray-800 font-medium hover:underline"
              >Privacy Policy</a
            >
          </p>

          <!-- Hidden FormSubmit fields -->
          <input type="hidden" name="_next" value={Astro.url.href} />
          <input type="hidden" name="_captcha" value="false" />
        </form>
      </div>
    </div>
  </div>

  <!-- Success Modal -->
  <dialog id="success_modal" class="modal">
    <div class="modal-box">
      <h3 class="font-bold text-xl text-green-700">Thank you!</h3>
      <div class="py-4 space-y-3">
        <div class="flex justify-center mb-2">
          <div class="rounded-full bg-green-100 p-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-green-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
        </div>
        <p class="text-center text-gray-700">
          Your message has been successfully sent!
        </p>
        <p class="text-center text-gray-600">
          We'll get back to you as soon as possible.
        </p>
      </div>
      <div class="modal-action justify-center">
        <form method="dialog">
          <button
            class="btn btn-primary bg-green-600 hover:bg-green-700 text-white border-none"
            >Close</button
          >
        </form>
      </div>
    </div>
    <form method="dialog" class="modal-backdrop">
      <button>close</button>
    </form>
  </dialog>
</section>

<script>
  // Get the form and modal elements
  const contactForm = document.getElementById("contactForm") as HTMLFormElement;
  const successModal = document.getElementById(
    "success_modal",
  ) as HTMLDialogElement;

  if (contactForm) {
    contactForm.addEventListener("submit", async function (e) {
      e.preventDefault();

      try {
        // Get form data
        const formData = new FormData(contactForm);

        // Submit the form using fetch
        fetch(contactForm.action, {
          method: "POST",
          body: formData,
          headers: {
            Accept: "application/json",
          },
        });

        // Reset the form
        contactForm.reset();

        // Show success modal
        successModal.showModal();
      } catch (error) {
        console.error("Error submitting form:", error);
      }
    });
  }
</script>
