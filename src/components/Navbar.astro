---
import { Image } from "astro:assets";
import logo from "@images/logo.png";

// Get the current path to determine active link
const currentPath = Astro.url.pathname;

// Function to check if link is active (matches current path)
// Handles both exact matches and nested paths
const isActive = (href) => {
  if (href === "/") {
    return currentPath === "/";
  }
  return currentPath.startsWith(href);
};

// Active link classes
const activeClass = "text-primary-green font-semibold";
const mobileActiveClass = "text-primary-green font-semibold";
---

<div class="navbar bg-base-100 shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center w-full">
      <div class="flex items-center">
        <!-- Mobile menu dropdown -->
        <div class="dropdown">
          <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h8m-8 6h16"></path>
            </svg>
          </div>
          <ul
            tabindex="0"
            class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52"
          >
            <li>
              <a
                href="/"
                class={`font-medium py-2 ${isActive("/") ? mobileActiveClass : ""}`}
                >HOME</a
              >
            </li>
            <li>
              <a
                href="/cannabis-flowers"
                class={`font-medium py-2 ${isActive("/cannabis-flowers") ? mobileActiveClass : ""}`}
                >PRODUCTS</a
              >
            </li>
            <li>
              <a
                href="/drying-tech"
                class={`font-medium py-2 ${isActive("/drying-tech") ? mobileActiveClass : ""}`}
                >POST-HARVEST</a
              >
            </li>
            <li>
              <a
                href="/about-us"
                class={`font-medium py-2 ${isActive("/about-us") ? mobileActiveClass : ""}`}
                >ABOUT US</a
              >
            </li>
          </ul>
        </div>
        <!-- Logo -->
        <div class="mx-2">
          <a href="/">
            <Image src={logo} alt="logo" class="h-10 w-auto" />
          </a>
        </div>
      </div>

      <!-- Desktop menu -->
      <div class="hidden lg:flex">
        <ul class="flex space-x-6">
          <li>
            <a
              href="/"
              class={`font-medium px-2 py-1 hover:text-primary-green border-b-2 ${isActive("/") ? "border-primary-green " + activeClass : "border-transparent"}`}
            >
              HOME
            </a>
          </li>
          <li>
            <a
              href="/cannabis-flowers"
              class={`font-medium px-2 py-1 hover:text-primary-green border-b-2 ${isActive("/cannabis-flowers") ? "border-primary-green " + activeClass : "border-transparent"}`}
            >
              PRODUCTS
            </a>
          </li>
          <li>
            <a
              href="/drying-tech"
              class={`font-medium px-2 py-1 hover:text-primary-green border-b-2 ${isActive("/drying-tech") ? "border-primary-green " + activeClass : "border-transparent"}`}
            >
              POST-HARVEST
            </a>
          </li>
          <li>
            <a
              href="/about-us"
              class={`font-medium px-2 py-1 hover:text-primary-green border-b-2 ${isActive("/about-us") ? "border-primary-green " + activeClass : "border-transparent"}`}
            >
              ABOUT US
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
